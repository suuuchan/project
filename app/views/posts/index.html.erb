
<div class="index">
  <h3>おさらあらいのかんそうをかいてみよう！</h3>
  <%= form_with model:@post, url:posts_path, local:true do |f| %>
  <%= f.label :タイトル %></br>
  <%= f.text_field :title, size: "42x20" %></br></br>
  <%= f.label :かんそうをかいてみよう！ %></br>
  <%= f.text_area :text %></br>
  <%= f.submit "かんそうをかけたら、クリックしよう！",class: "action" %>
  <% end %>
</div>
<div class="post">
  <% @posts.each do |post| %>

  
 
    <ul class="voice">
      <li><%= post.created_at.strftime("%Y年%m月%d日") %>/<%= post.user.name %></li>
      <li>タイトル:  <%= post.title %></li>
      <li>かんそう：</br><%= post.text %></li>
    </ul>
  

 <% end %>
</div>
 