<div class="index">
  <h3>ここからもかんそうがかけるよ♪</h3>
  <%= form_with model:@post, url:posts_path, local:true do |f| %>
    <%= f.label :タイトル %></br>
    <%= f.text_field :title, size: "42x20" %></br></br>
    <%= f.label :かんそうをかいてみよう！ %></br>
    <%= f.text_area :text %></br>
    <%= f.submit "かんそうをかけたら、クリックしよう！",class: "action" %>
  <% end %>
</div>